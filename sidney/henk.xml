<?xml version='1.0' encoding='utf-8'?>
<!--
* integrator
* geometry
* sensor
* film
* sampler
* emitter(s)
-->

<scene version="0.5.0">
    <integrator type="bdpt"/>

    <sensor type="perspective">
        <float name="fov" value="45"/>
        <string name="fovAxis" value="x"/>

        <transform name="toWorld">
            <lookat target="0,0,0" origin="0,2,5" up="0,1,0"/>
        </transform>

        <sampler type="independent">
            <integer name="sampleCount" value="32"/>
        </sampler>

        <film type="hdrfilm">
            <boolean name="banner" value="false"/>
            <integer name="height" value="216"/>
            <integer name="width" value="384"/>
        </film>
    </sensor>

    <shape type="rectangle">
        <transform name="toWorld">
            <rotate x="1" angle="-90"/>
        </transform>

        <bsdf type="diffuse"/>
    </shape>

    <shape type="disk">
        <emitter type="area">
            <spectrum name="radiance" value="1e2"/>
        </emitter>
        <transform name="toWorld">
            <scale value="0.1"/>
            <rotate x="1" angle="+90"/>
            <translate y="0.2"/>
        </transform>
    </shape>

