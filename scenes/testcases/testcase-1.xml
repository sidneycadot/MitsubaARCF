<?xml version="1.0" encoding="utf-8"?>

<scene version="0.5.0">

    <emitter type="constant">
        <spectrum name="radiance" value="1"/>
    </emitter>

    <shape type="rectangle">
        <bsdf type="diffuse">
            <rgb name="reflectance" value="1,1,0"/>
        </bsdf>
    </shape>

    <shape type="sphere">
        <point name="center" x="0" y="0" z="0"/>
        <float name="radius" value="0.1"/>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="1,0,1"/>
        </bsdf>
    </shape>

    <shape type="sphere">
        <point name="center" x="1" y="0" z="0"/>
        <float name="radius" value="0.1"/>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="1,0,0"/>
        </bsdf>
    </shape>

    <shape type="sphere">
        <point name="center" x="0" y="1" z="0"/>
        <float name="radius" value="0.1"/>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0,1,0"/>
        </bsdf>
    </shape>

    <shape type="sphere">
        <point name="center" x="0" y="0" z="1"/>
        <float name="radius" value="0.1"/>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0,0,1"/>
        </bsdf>
    </shape>

<!--
    <integrator type="path">
    </integrator>
-->

    <sensor type="perspective">

        <transform name="toWorld">
            <lookat origin="5,4,3" target="0,0,0" up="0,1,0"/>
        </transform>

        <float name="fov" value="45.0"/>

        <sampler type="independent">
            <integer name="sampleCount" value="32"/>
        </sampler>

        <film type="hdrfilm">
            <integer name="width" value="640"/>
            <integer name="height" value="480"/>
        </film>

    </sensor>

</scene>
