<?xml version='1.0' encoding='utf-8'?>

<scene version="0.5.0">

    <integrator type="bdpt" />

   <!-- camera -->

    <sensor type="perspective" id="overview">

        <float name="fov" value="45"/>

        <transform name="toWorld">
            <lookat origin="3,1,2" target="0,0,0" up="0,1,0"/>
        </transform>

        <sampler type="independent">
            <integer name="sampleCount" value="64"/>
        </sampler>

        <film type="hdrfilm">
            <boolean name="banner" value="false"/>
            <integer name="width" value="640"/>
            <integer name="height" value="480"/>
        </film>

    </sensor>

    <emitter type="sunsky" />

    <!-- light source =-->

    <emitter type="spot">
        <spectrum name="intensity" value="1e2" />
        <float name="beamWidth"    value="20"/>
        <float name="cutoffAngle"  value="20"/>

        <transform name="toWorld">
            <lookat origin="0,0,1" target="0,0,0"/>
        </transform>
    </emitter>


    <!-- glass object between source and target-->

    <shape type="cube">
        <bsdf type="dielectric">
            <float name="intIOR" value="1.4" />
            <float name="extIOR" value="1" />
        </bsdf>
        <transform name="toWorld">
            <scale x="2" y="2" z="0.001" />
            <translate z="0.5"/>
        </transform>
    </shape>

    <!-- diffuse target -->

    <shape type="rectangle">
        <bsdf type="diffuse">
            <spectrum name="reflectance" value="1"/>
        </bsdf>

        <transform name="toWorld">
            <scale value="2"/>
            <translate z="0"/>
        </transform>
   </shape>

</scene>
