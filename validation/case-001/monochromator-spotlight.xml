<?xml version='1.0' encoding='utf-8'?>

<scene version="0.5.0">

    <!-- monochromator-like spotlight -->

    <emitter type="spot">
        <spectrum name="intensity" value="$monochromator.irradiance" />
        <float name="cutoffAngle" value="0.57"/>
        <float name="beamWidth" value="0.57"/>
        <transform name="toWorld">
            <!-- monochromator transform -->
            <rotate y="1" angle="180"/>
            <translate z="1.0"/>
        </transform>
    </emitter>

</scene>
