<?xml version='1.0' encoding='utf-8'?>

<scene version="0.5.0">

    <!-- sample_under_test -->

    <default name="diffuser.ior" value="1.4"/>

    <shape type="disk" id="qvd diffuser front surface">

        <bsdf type="roughdielectric">
            <float name="intIOR" value="$diffuser.ior" />
        </bsdf>

        <transform name="toWorld">
            <scale value="0.5"/>
            <scale value="0.10"/>
            <!-- sample transformations -->
            <rotate z="1" angle="$meris.high_motor_angle"   />
            <rotate x="1" angle="$meris.middle_motor_angle" />
            <rotate y="1" angle="$meris.low_motor_angle"    />
        </transform>

    </shape>

    <shape type="disk" id="qvd diffuser back surface">

        <bsdf type="roughconductor">
            <string name="material" value="Al"/>
        </bsdf>

        <transform name="toWorld">
            <scale value="0.5"/>
            <scale value="0.10"/>
            <translate z="-0.005"/>
            <!-- sample transformations -->
            <rotate z="1" angle="$meris.high_motor_angle"   />
            <rotate x="1" angle="$meris.middle_motor_angle" />
            <rotate y="1" angle="$meris.low_motor_angle"    />
        </transform>

    </shape>

    <shape type="cylinder" id="qvd diffuser side">

        <point name="p0" x="0" y="0" z="-0.005"/>
        <point name="p1" x="0" y="0" z="0"/>
        <float name="radius" value="0.05"/>

        <bsdf type="roughdielectric">
            <float name="intIOR" value="$diffuser.ior" />
        </bsdf>

        <transform name="toWorld">
            <!-- sample transformations -->
            <rotate z="1" angle="$meris.high_motor_angle"   />
            <rotate x="1" angle="$meris.middle_motor_angle" />
            <rotate y="1" angle="$meris.low_motor_angle"    />
        </transform>

    </shape>

