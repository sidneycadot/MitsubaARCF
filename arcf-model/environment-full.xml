<?xml version='1.0' encoding='utf-8'?>

<scene version="0.5.0">

    <!-- environment light -->

    <emitter type="constant">
        <spectrum name="radiance" value="1e-20"/>
    </emitter>

    <!-- floor -->

    <shape type="shapegroup" id="floor">

        <shape type="rectangle">

            <bsdf type="twosided">

                <bsdf type="diffuse">
                    <texture type="checkerboard" name="reflectance">
                        <float name="uvscale" value="5"/>
                        <!--
                        <rgb name="color0" value="0,1,1"/>
                        <rgb name="color1" value="1,0,1"/>
                        -->
                    </texture>
                </bsdf>

            </bsdf>

            <transform name="toWorld">
                <scale value="5"/>
                <rotate x="1" angle="-90"/>
            </transform>
        </shape>

    </shape>

    <!-- define a 10m x 2m wall -->

    <shape type="shapegroup" id="wall">
        <shape type="rectangle">
            <bsdf type="twosided">
                <bsdf type="diffuse">
                    <texture name="reflectance" type="bitmap">
                        <string name="filename" value="brick.png"/>
                        <string name="wrapMode" value="repeat"/>
                        <float name="uscale" value="50"/>
                        <float name="vscale" value="12.5"/>
                        <float name="uoffset" value="0"/>
                        <float name="voffset" value="0"/>
                    </texture>
                </bsdf>
            </bsdf>

            <transform name="toWorld">
                <scale value="0.5"/>
                <scale x="10" y="2.5" z="1"/>
                <translate y="+0.25"/>
            </transform>
        </shape>
    </shape>

    <shape type="shapegroup" id="framed-painting">

        <shape type="rectangle">
            <bsdf type="diffuse">
                <texture name="reflectance" type="bitmap">
                    <string name="filename" value="jigsaw.jpg"/>
                    <string name="wrapMode" value="repeat"/>
                    <float name="uscale" value="1"/>
                    <float name="vscale" value="-1"/>
                    <float name="uoffset" value="0"/>
                    <float name="voffset" value="0"/>
                </texture>
            </bsdf>

            <transform name="toWorld">
                <scale x="2272" y="1704" z="1"/> <!-- pixel size -->
                <scale value="0.0002651848591549295774647887323943661"/> <!-- real-life painting is 1205 mm wide-->
            </transform>
        </shape>

        <shape type="cube">
            <bsdf type="diffuse">
                <rgb name="reflectance" value="#000000"/>
            </bsdf>
            <transform name="toWorld">
                <scale value="0.5"/>
                <scale x="1.245" y="0.02" z="0.01"/>
                <translate y="0.461875"/>
            </transform>
        </shape>

        <shape type="cube">
            <bsdf type="diffuse">
                <rgb name="reflectance" value="#000000"/>
            </bsdf>
            <transform name="toWorld">
                <scale value="0.5"/>
                <scale x="1.245" y="0.02" z="0.01"/>
                <translate y="-0.461875"/>
            </transform>
        </shape>

        <shape type="cube">
            <bsdf type="diffuse">
                <rgb name="reflectance" value="#000000"/>
            </bsdf>
            <transform name="toWorld">
                <scale value="0.5"/>
                <scale x="0.02" y="0.90375" z="0.01"/>
                <translate x="-0.612500"/>
            </transform>
        </shape>

        <shape type="cube">
            <bsdf type="diffuse">
                <rgb name="reflectance" value="#000000"/>
            </bsdf>
            <transform name="toWorld">
                <scale value="0.5"/>
                <scale x="0.02" y="0.90375" z="0.01"/>
                <translate x="+0.612500"/>
            </transform>
        </shape>

    </shape>

    <shape type="instance">
        <ref id="framed-painting"/>
        <transform name="toWorld">
            <translate x="0" y="0" z="-4.985"/>
            <rotate y="1" angle="90"/>
        </transform>
    </shape>

    <shape type="rectangle" id="door">
        <bsdf type="diffuse">
            <texture name="reflectance" type="bitmap">
                <string name="filename" value="door.jpg"/>
                <string name="wrapMode" value="repeat"/>
                <float name="uscale" value="1"/>
                <float name="vscale" value="-1"/>
                <float name="uoffset" value="0"/>
                <float name="voffset" value="0"/>
            </texture>
        </bsdf>

        <transform name="toWorld">
            <scale x="496" y="1024" z="1"/>
            <scale value="0.0009765625"/> <!-- door is 200 cm high-->
            <translate x="-3" y="0" z="-4.990"/>
            <rotate y="1" angle="-90"/>
        </transform>
    </shape>

    <shape type="instance">
        <ref id="floor"/>
        <transform name="toWorld">
            <translate y="-1"/>
        </transform>
    </shape>

    <shape type="instance">
        <ref id="wall"/>
        <transform name="toWorld">
            <translate z="-5"/>
            <rotate y="1" angle="0"/>
        </transform>
    </shape>

    <shape type="instance">
        <ref id="wall"/>
        <transform name="toWorld">
            <translate z="-5"/>
            <rotate y="1" angle="90"/>
        </transform>
    </shape>

    <shape type="instance">
        <ref id="wall"/>
        <transform name="toWorld">
            <translate z="-5"/>
            <rotate y="1" angle="180"/>
        </transform>
    </shape>

    <shape type="instance">
        <ref id="wall"/>
        <transform name="toWorld">
            <translate z="-5"/>
            <rotate y="1" angle="270"/>
        </transform>
    </shape>

    <shape type="instance">
        <ref id="axes"/>
        <transform name="toWorld">
            <translate x="-5" y="-1" z="-5"/>
        </transform>
    </shape>

</scene>
